//= require lib/bootstrap
//= require lib/bootstrap-theme
//= require_self

@import 'nib'
@import 'jeet'
@import 'rupture'

// edit()
  
rupture.scale = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'
  
sidebar-width = 300px
body
  font-family 'Open Sans', sans-serif
  
#map
  position absolute
  width 100%
  height 100%
  right sidebar-width

.sidebar
  width sidebar-width
  border-left 1px solid #ddd
  background #fafafa
  position fixed
  right 0
  top 0
  bottom 0
  padding 20px
  overflow scroll
  
.page
  padding-left 30px
  position absolute
  left 0
  right sidebar-width
  
  h1, h4
    color #555

  
.one
  col(1/3)
  background red
  
.two
  col(2/3)

.navbar-transparent
  position absolute
  left 0
  right 0
  background inherit
  border 0
  box-shadow inherit
  .navbar-nav > .active > a
  .navbar-nav > .active > a:hover
    background inherit
    box-shadow inherit
  
.container
  center(980px)
  
header
  center(980px)
  padding 30px 0
  .brand
    text-shadow: 0 1px 0 rgba(#fff, .25);
    float: left;
    height: 50px;
    font-size: 28px;
    line-height: 20px;
    &:hover
    &:focus
      text-decoration: none;